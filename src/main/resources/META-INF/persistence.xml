<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <!-- IN-MEMORY DB -->
  <persistence-unit name="sqlite-memory" transaction-type="RESOURCE_LOCAL">
    <description>Persistence unit for the in-memory SQLite database</description>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC" />
      <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite::memory:" />
      <property name="jakarta.persistence.schema-generation.database.action" value="create" />
    </properties>
  </persistence-unit>

  <!-- LOCAL DB [FILE] -->
  <persistence-unit name="local-db" transaction-type="RESOURCE_LOCAL">
    <class>dev.jamespagani.entities.Movement</class>
    <class>dev.jamespagani.entities.Product</class>
    <class>dev.jamespagani.entities.ThirdParty</class>
  </persistence-unit>
  <!-- PERSISTENCE UNIT FOR EXTERNAL DB -->
</persistence>
